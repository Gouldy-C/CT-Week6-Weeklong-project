{% extends 'base.jinja' %}
{% block content %}
{{ form.hidden_tag() }}
  <div class="width-100 my-4">
    <div class="mx-auto min-width-form">
      <h3>Sign In</h3>
      <p>
          {{ form.email.label }}<br>
          {{ form.email (size=32) }}
      </p>
      <p>
          {{ form.password.label }}<br>
          {{ form.password (size=32) }}
      </p>
      <p>
          {{ form.remember_me() }}
          {{ form.remember_me.label }}<br>
      </p>
      <p> {{ form.submit() }} </p>
    </div>
  </div>
{% endblock content %}