{% extends 'base.jinja' %}
{% block content %}
  <div class="width-100 my-4">
    <div class="mx-auto min-width-form">
      <h3>Sign In</h3>
      <form action="" method="POST" novalidate>
      {{ form.hidden_tag() }}
        <p>
          {{ form.email.label }}<br>
          {{ form.email (size=32) }}
          {% if form.email.errors %}
            <ul class="errors">
              {% for error in form.email.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </p>
        <p>
          {{ form.password.label }}<br>
          {{ form.password (size=32) }}
          {% if form.password.errors %}
            <ul class="errors">
              {% for error in form.password.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </p>
        <p>
            {{ form.remember_me() }}
            {{ form.remember_me.label }}<br>
        </p>
        <p> {{ form.submit() }} </p>
      </form>
    </div>
  </div>
{% endblock content %}